@model SNIESWebApplication.Models.Periodo

@{
    ViewBag.Title = Recursos.Resources.Eliminar;
}

<h2>@Recursos.Resources.Eliminar</h2>
<h3>@Recursos.Resources.EliminarConfirmar</h3>
<div>
    <h4>@Recursos.Resources.Periodos</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FechaPeriodo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaPeriodo)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="@Recursos.Resources.Eliminar" class="btn btn-danger" /> |
            @Html.ActionLink(Recursos.Resources.VolverLista, "Index", null, new { @class = "btn btn-success" })
        </div>
    }
</div>
