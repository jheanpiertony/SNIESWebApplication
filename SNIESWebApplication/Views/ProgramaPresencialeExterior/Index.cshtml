@model IEnumerable<SNIESWebApplication.Models.ProgramaPresencialeExterior>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink(Recursos.Resources.CrearNuevo, "Create")
</p>

<div class="form-horizontal">
    @Html.Partial("_DescargarReporteExcel")
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CODIGO_IES)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NOMBRE_IES)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ANO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SEMESTRE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CODIGO_PROGRAMA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PROGRAMA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CINE_CAMPO_DETALLADO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PAIS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MODALIDAD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FECHA_PERIODO)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CODIGO_IES)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NOMBRE_IES)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ANO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SEMESTRE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CODIGO_PROGRAMA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PROGRAMA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CINE_CAMPO_DETALLADO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PAIS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MODALIDAD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FECHA_PERIODO)
            </td>
            <td>
                @Html.ActionLink(Recursos.Resources.Editar, "Edit", new { id = item.Id }) |
                @Html.ActionLink(Recursos.Resources.Detalles, "Details", new { id = item.Id }) |
                @Html.ActionLink(Recursos.Resources.Eliminar, "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

@section Scripts {
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function(){

            $(document).on("click","#CrearPlantillaExcel",function(e){
             e.preventDefault();

                var newUrl = "@Url.Action("CrearPlantillaExcel", ViewBag.Contolador)?PeriodoIdActual=" + $("#PeriodoIdActual :selected").text();
                window.location.href = newUrl;
          });
        });
    </script>
}